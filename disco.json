{
    "version": "1.0",
    "services": {
        "web": {
            "port": 8080,
            "volumes": [
                {
                    "name": "dist-data",
                    "destinationPath": "/site/dist"
                }
            ]
        },
        "update-waste-calendar": {
            "type": "cron",
            "schedule": "0 6,18 * * 1-3",
            "command": "uv run python waste_collection_scraper.py",
            "volumes": [
                {
                    "name": "dist-data",
                    "destinationPath": "/site/dist"
                }
            ]
        },
        "update-lnhs-calendar": {
            "type": "cron",
            "schedule": "0 7 1,15 * *",
            "command": "uv run python lnhs_calendar_scraper.py --no-cache",
            "volumes": [
                {
                    "name": "dist-data",
                    "destinationPath": "/site/dist"
                }
            ]
        }
    }
}
