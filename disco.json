{
    "version": "1.0",
    "services": {
        "web": {
            "port": 8080,
            "volumes": [
                {
                    "name": "dist-data",
                    "destinationPath": "/site/dist"
                }
            ]
        },
        "update-calendar": {
            "type": "cron",
            "schedule": "0 6,18 * * 1-3",
            "command": "uv run python waste_collection_scraper.py -o /site/dist/calendar.ics",
            "volumes": [
                {
                    "name": "dist-data",
                    "destinationPath": "/site/dist"
                }
            ]
        }
    }
}
